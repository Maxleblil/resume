<div>
	<div>
		<h1>{{name}}</h1>
		<h2>{{description}}</h2>
		<h3>Price: {{price}}</h3>
		<h3>Category: {{category}}</h2>
	</div>

	<br />
	<hr />

	<div>
		<h3>Features</h3>
	</div>

	<div>
		<h4>Processor</h4>
		{{#with features.processor}}
			<ul>
				<li>Brand - {{brand}}</li>
				<li>Model - {{model}}</li>
				<li>Speed - {{speed}}</li>
				<li>Cores - {{cores}}</li>
				<li>Cache - {{cache}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Memory</h4>
		{{#with features.memory}}
			<ul>
				<li>Type - {{type}}</li>
				<li>Size - {{size}}</li>
				<li>Speed - {{speed}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Storage</h4>
		{{#with features.storage}}
			<ul>
				<li>Type - {{type}}</li>
				<li>Size - {{size}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Display</h4>
		{{#with features.display}}
			<ul>
				<li>Size - {{size}}</li>
				<li>Resolution - {{resolution}}</li>
				<li>Technology - {{technology}}</li>
				<li>Color space - {{color_space}}</li>
				<li>Brightness - {{brightness}}</li>
				<li>Refresh rate - {{refresh_rate}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Graphics</h4>
		{{#with features.graphics}}
			<ul>
				<li>Brand - {{brand}}</li>
				<li>Model - {{model}}</li>
				<li>Memory - {{memory}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Ports</h4>
		{{#each features.ports}}
			<ul>
				{{#if features}}
					<li>type - {{ports}}</li>
					<li>Count - {{count}}</li>
					<li>
						Features:
						<br />
						<br />
						<ul>
							{{#each features}}
								<li>{{this}}</li>
							{{/each}}
						</ul> 
					</li>
				{{else}}
					<li>type - {{type}}</li>
					<li>count - {{count}}</li>
				{{/if}}
			</ul>
		{{/each}}
	</div>

	<div>
		<h4>Battery</h4>
		{{#with features.battery}}
			<ul>
				<li>Type - {{type}}</li>
				<li>Capacity - {{capacity}}</li>
				<li>Life - {{life}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<ul>
			<li>Weight - {{features.weight}}</li>
		</ul>
	</div>

	<div>
		<h4>Dimensions</h4>
		{{#with features.dimensions}}
			<ul>
				<li>Height - {{height}}</li>
				<li>Width - {{width}}</li>
				<li>Depth - {{depth}}</li>
			</ul>
		{{/with}}
	</div>

	<div>
		<h4>Operating system</h4>
		<ul>
			<li>{{features.operating_system}}</li>
		</ul>
	</div>

	<div>
		<h4>Accessories</h4>
		{{#each features.accessories}}
			<ul>
				<li>Name: {{this.name}}</li>
				<li>Price: {{this.price}}</li>
			</ul>
		{{/each}}
	</div>
</div>