<div>
  <div>
    <h1 class='mb-5'>{{name}}</h1>
    <h2 class='mb-3'>{{description}}</h2>
    <h3 class='mb-3'>Price: {{price}}</h3>
    <h4>Category: {{category}}</h4>
  </div>

  <hr class='my-5' />

  <div class='mb-5'>
    <h3>Features</h3>
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Processor</h4>
    {{#with features.processor}}
      <ul>
        <li>Brand - {{brand}}</li>
        <li>Model - {{model}}</li>
        <li>Speed - {{speed}}</li>
        <li>Cores - {{cores}}</li>
        <li>Cache - {{cache}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Memory</h4>
    {{#with features.memory}}
      <ul>
        <li>Type - {{type}}</li>
        <li>Size - {{size}}</li>
        <li>Speed - {{speed}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Storage</h4>
    {{#with features.storage}}
      <ul>
        <li>Type - {{type}}</li>
        <li>Size - {{size}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Display</h4>
    {{#with features.display}}
      <ul>
        <li>Size - {{size}}</li>
        <li>Resolution - {{resolution}}</li>
        <li>Technology - {{technology}}</li>
        <li>Color space - {{color_space}}</li>
        <li>Brightness - {{brightness}}</li>
        <li>Refresh rate - {{refresh_rate}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Graphics</h4>
    {{#with features.graphics}}
      <ul>
        <li>Brand - {{brand}}</li>
        <li>Model - {{model}}</li>
        <li>Memory - {{memory}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Ports</h4>
    {{#each features.ports}}
      <ul>
        {{#if features}}
          <li>type - {{ports}}</li>
          <li>Count - {{count}}</li>
          <li>
            Features:
            <ul>
              {{#each features}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </li>
        {{else}}
          <li>type - {{type}}</li>
          <li>count - {{count}}</li>
        {{/if}}
      </ul>
    {{/each}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Battery</h4>
    {{#with features.battery}}
      <ul>
        <li>Type - {{type}}</li>
        <li>Capacity - {{capacity}}</li>
        <li>Life - {{life}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Weight</h4>
    <ul>
      <li>{{features.weight}}</li>
    </ul>
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Dimensions</h4>
    {{#with features.dimensions}}
      <ul>
        <li>Height - {{height}}</li>
        <li>Width - {{width}}</li>
        <li>Depth - {{depth}}</li>
      </ul>
    {{/with}}
  </div>

  <div class='mb-5'>
    <h4 class='mb-3'>Operating system</h4>
    <ul>
      <li>{{features.operating_system}}</li>
    </ul>
  </div>

  <div>
    <h4 class='mb-3'>Accessories</h4>
    {{#each features.accessories}}
      <ul>
        <li>Name: {{this.name}}</li>
        <li>Price: {{this.price}}</li>
      </ul>
    {{/each}}
  </div>
</div>