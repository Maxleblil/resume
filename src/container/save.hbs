<main>
  <h1>{{name}}</h1>
  <section>
    <ul>
      {{#each users}}
        <li>
          <h2>{{name}}</h2>
          {{age}}
          years,
          {{gender}}
          (<em>ID: {{id}}</em>)<b /><br />
          <b>Frends:</b>
          <ul>
            {{#each frends}}
              <li>
                <h4>{{name}}</h4>
                {{age}}
                years,
                {{gender}}
                (<em>ID: {{id}}</em>)<br /><br />
                <b>Mutual friends</b>
                <ul>
                  {{#each mutual_friends}}
                    <li>
                      <b>{{name}}</b>
                      {{age}}
                      years,
                      {{gender}}
                      (<em>ID: {{id}}</em>)<br /><br />

                      {{#if mutual_friends}}
                        Mutual friends:
                        <ul>
                          {{#each mutual_friends}}
                            <li>
                              <b>{{name}}</b>
                              {{age}}
                              years,
                              {{gender}}
                              (<em>ID: {{id}}</em>)<br /><br
                              />
                            </li>
                          {{/each}}
                        </ul>
                      {{/if}}
                    </li>
                  {{/each}}
                </ul>
              </li>
            {{/each}}
          </ul>
          {{#if groups}}
            <b>Groups</b>
            <ul>
              {{#each groups}}
                <li>
                  {{name}}
                  (<em>ID: {{id}}</em>)
                  <br />
                  {{description}}
                  <ul>
                    {{#each members}}
                      <li>
                        {{name}},
                        {{age}}
                        years,
                        {{gender}}
                        (<em>ID: {{id}}</em>)<br />
                      </li>
                    {{/each}}
                  </ul>
                </li>
              {{/each}}
            </ul>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </section>
</main>