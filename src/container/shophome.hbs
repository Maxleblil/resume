<main>

  <div class='card mb-5'>
    <div class='nav'>
      {{#each navigation.links}}
        <div class='nav-item'>
          <a
            href='{{this.href}}'
            target='_blank'
            class='nav-link {{#if @last}}disabled{{/if}}'
          >{{this.text}}</a>
        </div>
      {{/each}}
    </div>
  </div>

  <div class='row'>
    <div class='mb-4'>
      <h1 class='text-center'>{{newsBlock.title}}</h1>
    </div>
    <div class='col-12'>
      <div class='row g-3'>
        {{#each newsBlock.cards}}
          <div class='col-3'>
            <div class='card text-bg-secondary'>
              <div class='card-header'>
                <span>{{this.title}}</span>
                <div>
                  {{#if isTop}}
                    <span
                      class='badge text-bg-danger rounded-pill'
                    >Top</span>
                  {{/if}}
                  {{#if isNew}}
                    <span
                      class='badge text-bg-success rounded-pill'
                    >New</span>
                  {{/if}}
                </div>
              </div>
              <div class='card-body'>
                <p>{{this.description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <hr class='my-5' />

  <div class='row mb-5'>
    <div class='col-12'>
      <ul class='nav nav-tabs'>
        {{#each goodsBlock.tabs}}
          <li class='nav-item'>
            <a href="#" class='nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}'>{{this.text}}</a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <div class='row g-3'>
        {{#each goodsBlock.cards}}
          <div class='col-4'>
            <div class='card'>
              <img
                class='card-img-top'
                src={{this.image}}
                alt='awdf'
              />
              <div class='card-body'>
                <div class='mb-2'>
                  <h5>{{this.title}}</h5>
                  {{#if isHot}}
                    <span
                      class='badge text-bg-warning rounded-pill'
                    >Hot</span>
                  {{/if}}
                  {{#if isNew}}
                    <span
                      class='badge text-bg-primary rounded-pill'
                    >New</span>
                  {{/if}}
                </div>
                <p>{{this.description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <hr class='my-5' />

  <div class='card text-bg-secondary'>
    <div class='card-header'>
      <h2>{{subscribe.header}}</h2>
    </div>
    <div class='card-body'>
      <p>{{subscribe.description}}</p>
      <div class='mb-2'>
        <a
          href='{{subscribe.buttons.0.link}}'
          target='_blank'
          class='btn btn-primary'
        >{{subscribe.buttons.0.text}}</a>
      </div>
      <div>
        <a
          href='{{subscribe.buttons.1.link}}'
          target='_blank'
          class='btn btn-primary'
        >{{subscribe.buttons.1.text}}</a>
      </div>
    </div>
  </div>

  <hr class='my-5' />

  <div class='card text-center text-bg-success'>
    {{#with service}}
      <div class='card-header'>
        <h2>{{title}}</h2>
      </div>
      <div class='card-body'>
        <p>{{description}}</p>
        {{#each buttons}}
          <a
            href='{{link}}'
            target='_blank'
            class='btn btn-primary'
          >{{text}}</a>
        {{/each}}
      </div>
    {{/with}}
  </div>

  <hr class='my-5' />

  <div class='row'>
    <div class='col-12'>
      <div class='row'>
        {{#each footer}}
          <div class='col-2'>
            <div class='nav'>
              <div class='nav-item'>
                {{#each this}}
                  <a
                    href='{{this.link}}'
                    target="_blank"
                    class='nav-link {{#if @last}}disabled{{/if}}'
                  >{{this.text}}</a>
                {{/each}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>