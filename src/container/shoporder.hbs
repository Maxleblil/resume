<main>
  <div class='row g-2'>
    <div class='col-7'>
      <div class='card mb-5'>
				 	<div class='nav'>
						{{#each navigation.links}}
							<div class='nav-item'>
								<a
									href='{{this.href}}'
									class='nav-link {{#if @last}}disabled{{/if}}'
								>{{this.text}}</a>
							</div>
						{{/each}}
				 	</div>
			  </div>

      <div class='mb-5'>
        <h1>{{header}}</h1>
      </div>
    </div>
  </div>

  <div class='row g-2'>
    <div class='col-7'>
      <div class='mb-5'>
        <h2 class='mb-3'>{{contacts_data.title}}</h2>
        {{#each contacts_data.buttons}}
          {{#if isPrimary}}
            <button class='btn btn-warning me-2'>
              {{text}}
            </button>
          {{/if}}
          {{#if isOutline}}
            <button class='btn btn-outline-warning'>
              {{text}}
            </button>
          {{/if}}
        {{/each}}
      </div>

      {{#with contacts_data.form}}
        <div class='row g-3 mb-2'>
          {{#each input}}
            <div class='col-6'>
              <label class='form-lable'>{{label}}</label>
              <input
                type='text'
                placeholder='{{placeholder}}'
                class='form-control'
              />
              <div class='form-text'>{{caption}}</div>
            </div>
          {{/each}}

          <div>
            <hr class='my-3' />
          </div>

          {{#each switch}}
          <div class='form-check form-switch {{#if @first}}mb-3{{/if}}'>
            <input class='form-check-input' type='checkbox' {{#if isActive}}checked{{/if}}/>
            <label class='form-check-label'>{{text}}</label>
          </div>
          {{/each}}

          <div>
            <hr class='my-3' />
          </div>
        </div>
      {{/with}}

      <div>
        <h3 class='mb-3'>{{delivery.title}}</h3>
      </div>
      <div class='card mb-3'>
        <div class='card-body'>
          <div class='row'>
            {{#each delivery.select}}
              <div class='col-6'>
                <label
                  class='form-label'
                >{{this.label}}</label>
                <select class='form-select'>
                  <option selected>{{this.placeholder}}
                  </option>
                  {{#if this.options}}
                    {{#each this.options}}
                      <option
                        value='{{this.value}}'
                      >{{this.text}}
                      </option>
                    {{/each}}
                  {{/if}}
                </select>
              </div>
            {{/each}}
          </div>
        </div>
      </div>

      <div>
        {{#each delivery.delivery_type}}
          <div class='form-check'>
            <lable
              class='form-check-label'
            >{{this.type}}</lable>
            <input
              name='delivery'
              class='form-check-input'
              type='radio'
            />
          </div>
        {{/each}}
      </div>

      <div>
        <hr class='my-4' />
      </div>

      <div>
        <h3>{{delivery.payment.title}}</h3>
        {{#each delivery.payment.list}}
          <div class='form-check'>
            <label
              class='form-check-label'
            >{{this.type}}</label>
            <input
              name='payment'
              class='form-check-input'
              type='radio'
            />
          </div>
          <div class='form-text'>{{description}}</div>
        {{/each}}
      </div>

      <div>
        <hr class='my-4' />
      </div>

      <div class='mb-3'>
        <h3>Контактні дані отримувача</h3>
      </div>

      <div>
        {{#with delivery}}
          <div class='row'>
            {{#each contact}}
              <div class='col-6'>
                <label class='form-lable'>{{label}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div class='form-text'>{{caption}}</div>
              </div>
            {{/each}}
          </div>
        {{/with}}
      </div>

      <div>
        <hr class='my-4' />
      </div>

      <div>
        <label
          class='form-lebel'
        >{{delivery.coment.label}}</label>
        <input
          class='form-control'
          placeholder='{{delivery.coment.placeholder}}'
        />
      </div>

      <div>
        <hr class='my-4' />
      </div>

      {{#with coupon}}
        <div>
          <h3>{{coupon.title}}</h3>
          <div class='mb-3'>
            {{#with select.availabel_coupon}}
              <label class='form-label'>{{label}}</label>
              <select class='form-select form-select-lg'>
                <option selected>{{placeholder}}</option>
                {{#each options}}
                  <option
                    value='{{value}}'
                  >{{text}}</option>
                {{/each}}
              </select>
            {{/with}}
          </div>

          <div class='mb-3'>
            {{#with select.friend_coupon}}
              <label class='form-label'>{{label}}</label>
              <select class='form-select form-select-sm'>
                <option selected>{{placeholder}}</option>
                {{#each options}}
                  <option
                    value='{{value}}'
                  >{{text}}</option>
                {{/each}}

              </select>
            {{/with}}
          </div>

          <div>
            {{#with add}}
              <div class='mb-3'>
                <label class='form-label'>
                  {{friend.label}}
                </label>
                <input
                  class='form-control form-control-lg'
                  placeholder='{{friend.placeholder}}'
                />
                <div class='form-text'>
                  {{friend.caption}}
                </div>
              </div>

              <div>
                <label class='form-label'>
                  {{colleague.label}}
                </label>
                <input
                  class='form-control form-control-sm'
                  placeholder='{{colleague.placeholder}}'
                />
                <div class='form-text'>
                  {{colleague.caption}}
                </div>
              </div>
            {{/with}}
          </div>
        </div>
      {{/with}}

      <div>
        <hr class='my-4' />
      </div>

      {{#with quiz}}
        <div class='mb-3'>
          <div class='mb-3'>
            <h3>{{title}}</h3>
          </div>
          {{#with preference}}
            <div class='form-label'>{{title}}</div>
            {{#each options}}
              <div class='form-check'>
                <label
                  class='form-check-label'
                >{{this}}</label>
                <input
                  class='form-check-input'
                  name='options'
                  type='radio'
                />
              </div>
            {{/each}}
          {{/with}}
        </div>

        <div class='mb-3'>
          {{#with your_expirience}}
            <label class='form-label'>{{label}}</label>
            <input class='form-control' />
          {{/with}}
        </div>

        <div class='mb-3'>
          {{#with purchase_frequency}}
            <label class='form-label'>{{label}}</label>
            <select class='form-select'>
              <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value='{{value}}'>{{text}}</option>
              {{/each}}
            </select>
          {{/with}}
        </div>

        <div>
          {{#with factors}}
            <div class='form-label'>{{title}}</div>
            {{#each options}}
              <div class='form-check'>
                <label
                  class='form-check-label'
                >{{this}}</label>
                <input
                  class='form-check-input'
                  type='checkbox'
                />
              </div>
            {{/each}}
          {{/with}}
        </div>
      {{/with}}

    </div>

    <div class='col-5'>
      <div class='card mb-3 ms-2'>
        <div class='card-body'>
          {{#each action_block}}
            <div class='p-1'>
              {{#if isSuccess}}
                <button class='btn btn-success'>{{text}}
                </button>
              {{else}}
                {{#isDanger}}
                  <button class='btn btn-danger'>{{text}}
                  </button>
                {{else}}
                  {{#isInfo}}
                    <button class='btn btn-info'>{{text}}
                    </button>
                  {{/isInfo}}
                {{/isDanger}}
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>

      <div class='card ms-2'>
        <div class='card-body'>
          <h3>{{total.title}}</h3>
          {{#each total.item_list}}
            <div class='mb-1'>
              <span>{{this.name}}: {{this.price}}</span>
            </div>
          {{/each}}

          <hr class='my-2' />

          {{#each total.additional_info}}
            <div class='mb-1'>
              <span>{{this.text}}: {{this.value}}</span>
            </div>
          {{/each}}

          <hr class='my-2' />

          {{#with total.total_price}}
            <div>
              <span>{{text}}: {{value}}</span>
            </div>
          {{/with}}

          <hr class='my-2' />

          {{#each total.button}}
					<div class="p-2">
						<button class="d-flex my-1 btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}">
							{{text}}
						</button>
					</div>
					{{/each}}

        </div>
      </div>
    </div>
  </div>

  <div>
    <hr class='mt-5' />
  </div>

  <footer>
    <div class='row'>
      <div class='col-12'>
        <div class='nav'>
          {{#each footer}}
            <div class='col-2'>
              <div class='nav-item'>
                {{#each this}}
                  <a
                    class='nav-link {{#if @last}}disabled{{/if}}'
                    href='{{this.link}}'
                  >{{this.text}}</a>
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </footer>
</main>