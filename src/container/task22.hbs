<main>

  <div>
    <h1 class='text-center'>{{page_header.title}}</h1>
    <p class='text-center text-uppercase'>
      {{page_header.description}}
    </p>
  </div>

  <br />

  <div class='card'>
    <div class='card-body'>
      <div class='text-end display-6'>
        {{section.about_us.title_list.main}}
      </div>
      <br />
      <div class='text-end'>
        <h2>{{section.about_us.title_list.sub}}</h2>
      </div>
      <br />
      <button class='btn btn-outline-info'>
        {{section.about_us.button.text}}
      </button>
    </div>
  </div>

  <br />
  <br />

  <div class='card'>
    <div class='card-body'>
      <div class='display-5'>
        {{section.advantage.title}}
      </div>

      <br />

      <div class='card'>
        <div class='card-body'>
          <div class='display-4'>
            {{section.advantage.efficiency.title}}
          </div>
          <br />
          <h6>
            {{section.advantage.efficiency.sub_title}}
          </h6>
          <br />
          <p>
            {{section.advantage.efficiency.description}}
          </p>
          <br />
          <button class='btn btn-outline-warning'>
            {{section.advantage.efficiency.button}}
          </button>
        </div>
      </div>

      <br />

      <div class='card'>
        <div class='card-body'>
          <div class='text-center display-4'>
            {{section.advantage.innovation.title}}
          </div>
          <br />
          <h6 class='text-center'>
            {{section.advantage.innovation.sub_title}}
          </h6>
          <br />
          <div class='text-center'>
            <p>
              {{section.advantage.innovation.description}}
            </p>
          </div>
          <br />
          <button class='btn btn-outline-warning'>
            {{section.advantage.innovation.button}}
          </button>
        </div>
      </div>

      <br />

      <div class='card'>
        <div class='card-body'>
          <div class='text-end display-4'>
            {{section.advantage.collaboration.title}}
          </div>
          <br />
          <h6 class='text-end'>
            {{section.advantage.collaboration.sub_title}}
          </h6>
          <br />
          <div class='text-end'>
            <p>
              {{section.advantage.collaboration.description}}
            </p>
          </div>
          <br />
          <button class='btn btn-outline-warning'>
            {{section.advantage.collaboration.button}}
          </button>
        </div>
      </div>
    </div>
  </div>

  <br />
  <br />

  <div class='card'>
    <div class='card-body'>
      <div class='display-5'>
        {{section.agreement.title}}
      </div>
      <div class='card'>
        <div class='card-body'>
          <h5>{{section.agreement.info.sub_title}}</h5>
          <div class='card'>
            <div class='card-body'>
              <p>{{section.agreement.info.detail.text}}</p>
              <button class='btn btn-success'>
                {{section.agreement.info.detail.button}}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>